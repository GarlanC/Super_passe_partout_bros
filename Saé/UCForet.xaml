<UserControl x:Class="Saé.UCForet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saé"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvasJeu" KeyDown="canvasJeu_KeyDown" KeyUp="canvasJeu_KeyUp">
            <Canvas.RenderTransform>
                <TranslateTransform x:Name="cameraTransform"/>
            </Canvas.RenderTransform>
            <Image Source="/images/fondForet1.jpeg" Stretch="Fill" Height="450" Width="800"/>
            <Image Source="/images/fondForet2.jpeg" Stretch="Fill" Canvas.Left="800" Height="450" Width="800"/>
            <Image x:Name="imgPerso" Source="/images/img{MainWindow.Perso}Face.png" Height="120" Width="120" Canvas.Left="20" Canvas.Bottom="60"/>
            <Image x:Name="cleForet" Width="115" Height="180" Canvas.Left="1403" Source="/images/cleForet.png" Stretch="Fill" Canvas.Bottom="60" HorizontalAlignment="Left" Canvas.Top="203" VerticalAlignment="Top"/>
        </Canvas>
        <Button x:Name="butPause" Tag="Platform" Background="{x:Null}" BorderBrush="Transparent" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="5" Canvas.Top="5" Click="butPause_Click" IsEnabled="True" Visibility="Visible">
            <Image Source="/images/boutonPause.png" Height="50"/>
        </Button>
    </Grid>
</UserControl>
