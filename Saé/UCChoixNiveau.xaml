<UserControl x:Class="Saé.UCChoixNiveau"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saé"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/images/fondSelections.png" Stretch="Fill"/>
        <Button x:Name="butRetourNiveaux" HorizontalAlignment="Left" Margin="50,340,0,0" VerticalAlignment="Top" Height="60" Width="220" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="/images/imgRetour.png" Stretch="Fill"/>
        </Button>
        <Image Margin="191,-20,191,245" Source="/images/titreNiveaux.png" Stretch="Fill"/>
        <Button x:Name="butForet" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,170,0,0" Background="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Content>
                <Image Source="/images/logoForet.png" Width="140" Height="140"/>
            </Button.Content>
        </Button>
        <Button x:Name="butDesert" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,170,0,0" Background="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Content>
                <Image Source="/images/logoDesert.png" Width="140" Height="140"/>
            </Button.Content>
        </Button>
        <Button x:Name="butPlage" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="609,170,0,0" Background="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Content>
                <Image Source="/images/logoPlage.png" Width="140" Height="140"/>
            </Button.Content>
        </Button>
        <Button x:Name="butPorte" HorizontalAlignment="Left" Margin="579,340,0,0" VerticalAlignment="Top" Height="60" Width="180" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="/images/imgButPorte.png" Stretch="Fill"/>
        </Button>

    </Grid>
</UserControl>
