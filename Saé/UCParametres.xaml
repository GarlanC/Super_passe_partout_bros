<UserControl x:Class="Saé.UCParametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saé"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Width="800" Height="450" Loaded="UserControl_Loaded" KeyDown="UCParametres_KeyDown" Focusable="True">
    <Grid>
        <Image Source="/images/fondSelections.png" Stretch="Fill"/>
        <Image Source="/images/titreParametres.png" VerticalAlignment="Top" HorizontalAlignment="Center" Width="600" Margin="0,-10,0,0"/>
        <Slider x:Name="sliderSon" Height="25" Width="500" VerticalAlignment="Top" HorizontalAlignment="Center" Minimum="0" Maximum="100" Value="100" Margin="0,150,0,0" SmallChange="1" TickPlacement="TopLeft"  IsSnapToTickEnabled="True"/>
        <Label Content="Volume son :" Width="160" FontSize="20" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,115,10,0"/>
        <TextBlock Text="{Binding ElementName=sliderSon, Path=Value}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="110,120,0,0"/>
        
        <StackPanel HorizontalAlignment="Center" Width="200" Height="200" VerticalAlignment="Center" Margin="0,150,0,0">
            <Button x:Name="butHaut" Background="{x:Null}" BorderBrush="{x:Null}" Click="ChangeKey_Click">
                <Grid>
                    <Image Source="/images/imgVide.png" Height="42"/>
                    <TextBlock x:Name="txtHaut" Text="Haut : Up" Foreground="White" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,8"/>
                </Grid>
            </Button>
            <Button x:Name="butBas" Background="{x:Null}" BorderBrush="{x:Null}" Click="ChangeKey_Click">
                <Grid>
                    <Image Source="/images/imgVide.png" Height="42"/>
                    <TextBlock x:Name="txtBas" Text="Bas : Down" Foreground="White" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,8"/>
                </Grid>
            </Button>
            <Button x:Name="butGauche" Background="{x:Null}" BorderBrush="{x:Null}" Click="ChangeKey_Click">
                <Grid>
                    <Image Source="/images/imgVide.png" Height="42"/>
                    <TextBlock x:Name="txtGauche" Text="Gauche : Left" Foreground="White" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,8"/>
                </Grid>
            </Button>
            <Button x:Name="butDroite" Background="{x:Null}" BorderBrush="{x:Null}" Click="ChangeKey_Click">
                <Grid>
                    <Image Source="/images/imgVide.png" Height="42"/>
                    <TextBlock x:Name="txtDroite" Text="Droite : Right" Foreground="White" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,8"/>
                </Grid>
            </Button>
        </StackPanel>
        <Button x:Name="butRetour" HorizontalAlignment="Left" Margin="20,0,0,20" VerticalAlignment="Bottom" Height="60" Width="200" Background="Transparent" BorderBrush="{x:Null}" Click="butRetour_Click">
            <Image Source="/images/imgRetour.png" Stretch="Fill"/>
        </Button>
        <Button x:Name="butValider" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Height="60" Width="200" Background="Transparent" BorderBrush="{x:Null}">
            <Image Source="/images/imgValider.png" Height="120" VerticalAlignment="Center" Margin="0,0,0,0" Width="200" />
        </Button>
    </Grid>
</UserControl>
