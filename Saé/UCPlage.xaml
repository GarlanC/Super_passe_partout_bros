<UserControl x:Class="Saé.UCPlage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saé"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Button x:Name="butPause" Background="{x:Null}" BorderBrush="Transparent" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <Image Source="/images/boutonPause.png" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Button>
        <Image Height="450" Source="/images/fondPlage1.png" Stretch="Fill" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Height="450" Source="/images/fondPlage2.png" Stretch="Fill" Width="800" HorizontalAlignment="Left" Canvas.Left="800" VerticalAlignment="Center"/>
        <Image x:Name="imgPerso" Source="/images/imgHommeFace.png" Height="120" Width="120" Canvas.Bottom="60" Canvas.Top="225" Canvas.Left="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</UserControl>
