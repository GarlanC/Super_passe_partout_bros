<UserControl x:Class="Saé.UCPorte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saé"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UCPorte_Loaded">
    <Grid>
        <Image Source="/images/fondSelections.png" Stretch="Fill"/>
        <Button x:Name="butPorte" HorizontalAlignment="Center" VerticalAlignment="Center" Height="386" Width="384" Background="{x:Null}" BorderBrush="{x:Null}" Click="butPorte_Click">
            <Image Source="/images/porte.png" Stretch="Fill"/>
        </Button>
        <Button x:Name="butCadenasForet" HorizontalAlignment="Center" Margin="0,207,0,0" VerticalAlignment="Top" Height="60" Width="60" Background="{x:Null}" BorderBrush="{x:Null}" Click="butCadenasForet_Click">
            <Image Source="/images/cadenasForet.png" Stretch="Fill"/>
        </Button>
        <Button x:Name="butCadenasDesert" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Height="60" Width="60" Background="{x:Null}" BorderBrush="{x:Null}" Click="butCadenasDesert_Click">
            <Image Source="/images/cadenasDesert.png" Stretch="Fill"/>
        </Button>
        <Button x:Name="butCadenasPlage" HorizontalAlignment="Center" Margin="0,334,0,0" VerticalAlignment="Top" Height="60" Width="60" Background="{x:Null}" BorderBrush="{x:Null}" Click="butCadenasPlage_Click">
            <Image Source="/images/cadenasPlage.png" Stretch="Fill"/>
        </Button>
        <Button x:Name="butRetour" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="60" Width="200" Background="Transparent" BorderBrush="{x:Null}">
            <Image Source="/images/imgRetour.png" Stretch="Fill"/>
        </Button>
        <TextBlock x:Name="txtCptCleForet" HorizontalAlignment="Left" Margin="34,282,0,0" TextWrapping="Wrap" Text="txx" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Background="#FF1BC144"/>
        <TextBlock x:Name="txtCptCleDesert" HorizontalAlignment="Left" Margin="34,312,0,0" TextWrapping="Wrap" Text="txxt" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Background="#FFEFE13F"/>
        <TextBlock x:Name="txtCptClePlage" HorizontalAlignment="Left" Margin="34,344,0,0" TextWrapping="Wrap" Text="txt" VerticalAlignment="Top" RenderTransformOrigin="-0.311,0.453" FontSize="18" FontFamily="Comic Sans MS" Background="#FF29BACC"/>

    </Grid>
</UserControl>
