<UserControl x:Class="Saé.UCForet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saé"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Height="450" Width="800">
    <Canvas x:Name="canvasJeu" KeyDown="canvasJeu_KeyDown" KeyUp="canvasJeu_KeyUp">
        <Canvas.RenderTransform>
            <TranslateTransform x:Name="cameraTransform"/>
        </Canvas.RenderTransform>
        <Image Source="/images/fondForet1.jpeg" Stretch="Fill" Height="450" Width="800"/>
        <Image Source="/images/fondForet2.jpeg" Stretch="Fill" Canvas.Left="800" Height="450" Width="800"/>
        <Image x:Name="imgPerso" Source="/images/img{MainWindow.Perso}Face.png" Height="120" Width="120" Canvas.Left="20" Canvas.Bottom="60"/>
        <Button x:Name="butPause" Background="{x:Null}" BorderBrush="Transparent" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Click="butPause_Click">
            <Image Source="/images/boutonPause.png" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Button>
        <Image x:Name="cleForet" Height="191" Canvas.Left="1409" Source="/images/cléForet.png" Stretch="Fill" Canvas.Bottom="60" Width="115"/>
    </Canvas>
</UserControl>
